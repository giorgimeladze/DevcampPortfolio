<h1>Angular Portfolio Items</h1>

<a href="portfolios/new">Create New User</a>
<%= link_to "Create new portfolio", new_portfolio_path if logged_in?(:site_admin)%>
<%= link_to "Create new portfolio", new_portfolio_url, subdomain: "my_subdomain" if logged_in?(:site_admin)%>

<% @angular_items.each do |portfolio| %>
  <p><%= link_to portfolio.title, portfolio_show_path(portfolio) %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image if portfolio.thumb_image %>
  <%= link_to "Edit", edit_portfolio_path(portfolio) if logged_in?(:site_admin)%>
  <%= link_to "Delete", portfolio_path(portfolio), method: :delete, data: {confirm: 'Are your sure?'} if logged_in?(:site_admin)%>
<% end %>
